# Agent Provider Configuration
# Choose provider: "openai" or "bedrock"
AGENT_PROVIDER=openai

# OpenAI Configuration (when using OpenAI provider)
OPENAI_API_KEY=your_openai_api_key_here
# Available models: gpt-4o, gpt-4-turbo, gpt-3.5-turbo
# When GPT-5 is released, you can use: gpt-5
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# AWS Configuration (when using Bedrock provider)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_SESSION_TOKEN=optional_session_token

# AWS Bedrock Configuration (when using Bedrock provider)
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.7

# AWS Bedrock Knowledge Base Configuration
BEDROCK_KB_ID=your_knowledge_base_id_here
BEDROCK_KB_REGION=us-east-1

# Agent Configuration
AGENT_NAME=strands-poc-agent
LOG_LEVEL=INFO
